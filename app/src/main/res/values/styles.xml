<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/galindo</item>
    </style>


    <style name="AppTheme.FullScreenDialogStyle">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="android:windowNoTitle">true</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/colorWhite</item>

        <item name="android:windowAnimationStyle">@style/FullScreenDialogAnimationStyle</item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="FullScreenDialogAnimationStyle">
        <!-- Additionally if you want animations when dialog opening -->
        <item name="android:windowEnterAnimation">@anim/fragment_fade_enter</item>
        <item name="android:windowExitAnimation">@anim/fragment_fade_exit</item>
    </style>

</resources>
